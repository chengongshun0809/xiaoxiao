<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_base_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="@drawable/blue"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp" >

            <TextView
                android:id="@+id/NickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="您尚未登录"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
             >

           <Button
               android:id="@+id/btn_nologin_fragment"
               android:layout_width="108dp"
               android:layout_height="40dp"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:background="@drawable/nologin_fragment_buttonstyle"
               android:text="登录"
               android:textColor="#ffffff" />
            
        </RelativeLayout>

       
    </LinearLayout>
     <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp" >

          
            <Button
                android:id="@+id/tixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baise"
                android:text="提现" />

            <Button
                android:id="@+id/recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/yellow"
                android:text="充值" />
        </RelativeLayout>
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/zongzichan"
         >

        <ImageView
            android:id="@+id/iv_hf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/total_assats"
            android:layout_marginTop="5dp"
             />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_hf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:text="总资产"
            android:textSize="18sp"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow" />
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@color/igray"
        />
    <LinearLayout
        android:id="@+id/drink_record"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_hf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiubi_recrod"
            android:layout_marginTop="5dp"
             />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_hf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:text="酒币记录"
            android:textSize="18sp"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow" />
    </LinearLayout>
 <View 
     android:layout_width="fill_parent"
     android:layout_height="1dp"
     android:background="@color/igray"
     />
  <LinearLayout
      android:id="@+id/trade_record"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_hf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trade_recrod"
            android:layout_marginTop="5dp"
             />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_hf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:text="交易记录"
            android:textSize="18sp"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow" />
    </LinearLayout>
 <View 
     android:layout_width="fill_parent"
     android:layout_height="1dp"
     android:background="@color/igray"
     />
  <LinearLayout
      android:id="@+id/tixianRecord"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp" >

         <ImageView
            android:id="@+id/iv_hf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tixian_recrod" 
            android:layout_marginTop="5dp"
            />


        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_hf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:text="提现记录"
            android:textSize="18sp"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow" />
    </LinearLayout>
 <View 
     android:layout_width="fill_parent"
     android:layout_height="1dp"
     android:background="@color/igray"
     />
 
 
</LinearLayout>
