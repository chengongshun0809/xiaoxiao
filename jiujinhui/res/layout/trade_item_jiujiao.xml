<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/add_view"
        android:layout_width="fill_parent"
        android:layout_height="215dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/jiaoyizhong"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="交易中"
                    android:textColor="#cc0000" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="10dp"
                     >
                     <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.5"
                    android:textColor="#ff0000"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="%"
                    android:textColor="#ff0000"
                    android:textSize="28sp" />
                </LinearLayout>

               

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="10dp"
                    android:text="收储服务费"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:id="@+id/know_detail"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/detile_shape_corners" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="了解详情"
                        android:textColor="#cc0000" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:background="@color/igray" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:text="龙潭酒金窖"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交易代码: "
                        android:textSize="15.5sp" />

                    <TextView
                        android:id="@+id/dealcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16002"
                        android:textSize="15.5sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限量发行: "
                        android:textSize="15.5sp" />

                    <TextView
                        android:id="@+id/stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000"
                        android:textSize="15.5sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="瓶"
                        android:textSize="15.5sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/li"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成交价:¥ "
                        android:textSize="15.5sp" />

                    <TextView
                        android:id="@+id/realprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="298.26"
                        android:textSize="15.5sp" />

                    <TextView
                        android:id="@+id/term_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天"
                        android:textSize="15.5sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/LongTan"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_shape_corners" >

            <TextView
                android:id="@+id/btn_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="进入交易大厅"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/igray" />
    </LinearLayout>

</LinearLayout>