<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@color/igray" />

    <RelativeLayout
        android:id="@+id/jiaoyizhong"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="火热交易中"
            android:textColor="#cc0000" />

   
    </RelativeLayout>
     <RelativeLayout
        android:id="@+id/rengouqi"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:visibility="gone" >
         <LinearLayout
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
             >

            <TextView
             
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认购期还剩: "
                android:textColor="#cc0000"
                android:textSize="15.5sp" />

            <TextView
                android:id="@+id/left_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="#cc0000"
                android:textSize="15.5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                android:textColor="#cc0000"
                android:textSize="15.5sp" />
        </LinearLayout>
</RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.5"
                    android:textColor="#ff0000"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="%"
                    android:textColor="#ff0000"
                    android:textSize="28sp" />
            </LinearLayout>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="10dp"
                android:text="收储服务费"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/know_detail"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/detile_shape_corners" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="了解详情"
                    android:textColor="#cc0000" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:background="@color/igray" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="龙潭酒"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易代码: "
                    android:textSize="15.5sp" />

                <TextView
                    android:id="@+id/dealcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16002"
                    android:textSize="15.5sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限量发行: "
                    android:textSize="15.5sp" />

                <TextView
                    android:id="@+id/stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:textSize="15.5sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="瓶"
                    android:textSize="15.5sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/li"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交价:¥ "
                    android:textColor="#3366cc"
                    android:textSize="15.5sp" />

                <TextView
                    android:id="@+id/realprice_chengjiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="298.26"
                    android:textColor="#3366cc"
                    android:textSize="15.5sp" />

                <TextView
                    android:id="@+id/term_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="#3366cc"
                    android:textSize="15.5sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_public"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_shape_corners"
        android:visibility="gone" >

        <TextView
            android:id="@+id/btn_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="进入交易大厅"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/igray" />

</LinearLayout>