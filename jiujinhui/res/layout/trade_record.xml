<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:PagerSlidingTabStrip="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <include layout="@layout/layout_base_title" />
    

    <zz.itcast.jiujinhui.activity.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_second_height"
        PagerSlidingTabStrip:pstsDividerColor="#d6d6d6"
        PagerSlidingTabStrip:pstsDividerPadding="10dip"
        PagerSlidingTabStrip:pstsIndicatorColor="@color/green_txt"
        PagerSlidingTabStrip:pstsIndicatorHeight="2dip"
        PagerSlidingTabStrip:pstsMaxLineWidth="80dip"
        PagerSlidingTabStrip:pstsUnderlineHeight="1dip"
        PagerSlidingTabStrip:selectedTabTextColor="@color/green_txt"
        PagerSlidingTabStrip:tabTextSize="@dimen/medium_text_size"
         />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>